<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to 'Chronos', root_path, :class=>'brand' %>
        <div class="nav-collapse">
          <ul class="nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Storage<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Daily', storage_path('daily')%></a></li>
                <li><%= link_to 'Weekly', storage_path('weekly')%></a></li>
                <li><%= link_to 'Monthly', storage_path('monthly')%></a></li>
                <li class="divider"></li>
                <li class="nav-header">Quick Access</li>
                <li><%= link_to 'Fast Stats',storage_path('quick')%></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Users<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Daily', users_path('daily')%></a></li>
                <li><%= link_to 'Weekly', users_path('weekly')%></a></li>
                <li><%= link_to 'Monthly', users_path('monthly')%></a></li>
                <li class="divider"></li>
                <li class="nav-header">Quick Access</li>
                <li><%= link_to 'Fast Stats',users_path('quick')%></li>
              </ul>
            </li>
          </ul>
          <form class="navbar-search pull-right" action="">
            <input type="text" class="search-query span2" placeholder="Search">
          </form>
        </div><!-- /.nav-collapse -->
      </div>
    </div><!-- /navbar-inner -->
  </div><!-- /navbar -->
<div class="container">
<%= yield %>
</div>

</body>
</html>
